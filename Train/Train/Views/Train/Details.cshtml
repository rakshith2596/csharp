@model System.Data.DataTable

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Train</h4>
    <hr />
    <dl class="dl-horizontal">
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <dt>Train Number : </dt>
            <dd>@Model.Rows[i][0]</dd>
            <dt>Source : </dt>
            <dd>@Model.Rows[i][1]</dd>
            <dt>Destination : </dt>
            <dd>@Model.Rows[i][2]</dd>
            <dt>Departure Time : </dt>
            <dd>@Model.Rows[i][3]</dd>
            <dt>Available Seats : </dt>
            <dd>@Model.Rows[i][4]</dd>
        }
    </dl>
</div>
